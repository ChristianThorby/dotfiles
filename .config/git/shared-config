[core]
    editor = vim
    autocrlf = false
[commit]
    verbose = true
[alias]
    pf = push --force-with-lease
[rerere]
    enabled = true
[advice]
    statusHints = off
[alias]
  add = "!f() { git add \"$@\" && git status; }; f"
  commit = "!f() { git commit \"$@\" && git status; }; f"
  checkout = "!f() { git checkout \"$@\" && git status; }; f"
  push = "!f() { git push \"$@\" && git status; }; f"
